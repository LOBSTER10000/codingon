<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>포스트로 글쓰기</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <form name="resultForm">
      <input
        type="text"
        placeholder="아이디 입력"
        name="userId"
        id="userId"
      /><br />
      <input type="text" placeholder="이름 입력" name="userName" id="userName"></br>
      <input
        type="password"
        placeholder="비밀번호 입력"
        name="userPass"
        id="userPass"
      /><br />
      
      <button type="button" onclick="postAxios()">전송</button>
    </form>
  </body>
  <script>
    const form = document.forms['resultForm'];

    function postAxios() {
      const data = {
        userId: form.userId.value,
        userName : form.userName.value,
        userPass: form.userPass.value,
      };
      if (confirm('등록하시겠습니까?') === true) {
        axios({
          method: 'post',
          url: '/post',
          data: data,
        })
          .then((res) => {
            console.log(res.data);
            alert('성공적으로 등록되셨습니다');
            location.href = '/';
          })
          .catch((err) => {
            console.error('에러가 생겼습니다' + err);
          });
      }
    }
  </script>
</html>
